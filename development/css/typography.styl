// Set Defaults for Body

line-height = 1.5
font-size = 100%

default-text-colour = #FFF

body
	line-height: line-height
	font-size: font-size
	font-family: Proxima Nova, "Helvetica Neue", Helvetica, Arial, sans-serif
	font-weight: normal
	text-rendering: optimizeLegibility
	-webkit-text-size-adjust: 100% 
	-ms-text-size-adjust: 100%
	color: default-text-colour



// MISC ELEMENTS

hr 
	display: block 
	height: 0px 
	width: 100% 
	border: 0 
	border-bottom: 1px solid #eeeeee 
	margin: 2em 0 
	padding: 0 

.bigText
	font-size: 2.5em
	font-weight 700

.smallText
	font-size 1.1em
	font-weight 500

.leadText
	font-size: 1.7em
	font-weight: 200
	background: rgba(0,0,0,0.1)

.tinyText
	font-size 0.9em
	font-weight: 200

.subText
	color #D6D6D6

.introText
	font-size: 1.4em;
	font-weight: 300
	margin-top: 10px

a
	color #DD3333